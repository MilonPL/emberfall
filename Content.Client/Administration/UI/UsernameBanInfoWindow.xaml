<DefaultWindow
    xmlns="https://spacestation14.io"
    Title="Username Ban info"
    MinWidth="500">
    <!-- this formatting could be fixed with a grid container -->
    <BoxContainer Orientation="Vertical">
        <Label Name="UsernameBanIdLabel" Text="Id:" ClipText="True" HorizontalExpand="True"/>

        <CheckBox Name="RegexCheckbox" Access="Public" Disabled="True" Text="Regex" />
        <Label Name="UsernameBanExpressionLabel" Text="Id:" ClipText="True" HorizontalExpand="True"/>
        <CheckBox Name="ExtendToBanCheckbox" Access="Public" Disabled="True" Text="Extend to ban" />

        <Label Name="CreatingAdminLabel" Text="Creator:" ClipText="True" HorizontalExpand="True"/>
        <Label Name="CreateTimeLabel" Text="Retire Time:" ClipText="True" HorizontalExpand="True"/>
        <Label Name="RoundIdLabel" Text="Roud Id:" ClipText="True" HorizontalExpand="True"/>

        <CheckBox Name="RetiredCheckbox" Access="Public" Disabled="True" Text="Retired" />

        <Label Name="RetiringAdminLabel" Text="Creator:" ClipText="True" HorizontalExpand="True"/>
        <Label Name="RetireTimeLabel" Text="Retire Time:" ClipText="True" HorizontalExpand="True"/>

        <Label Name="MessageLabel" Text="Message:" ClipText="True" HorizontalExpand="True"/>

        <Button Name="PardonButton" Access="Public" Disabled="False" Text="Pardon" HorizontalAlignment="Right"/>
    </BoxContainer>
</DefaultWindow>