<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:cc="clr-namespace:Content.Client.Administration.UI.CustomControls"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc ban-panel-title}" MinSize="350 500">
    <BoxContainer Orientation="Vertical">
       <Label Name="PlayerName"/>
       <BoxContainer Orientation="Horizontal">
           <Label Name="Whitelisted"/>
           <Button Name="WhitelistToggle" Text="False" Visible="False"></Button>
       </BoxContainer>
       <Label Name="Playtime"/>
       <Label Name="Notes"/>
       <Label Name="Bans"/>
       <Label Name="RoleBans"/>
       <GridContainer Rows="3">
        <Button Name="NotesButton" Text="ShowNotes" Disabled="True"/>
        <Button Name="ShowBansButton" Text="ShowBans" Disabled="True"/>
        <Button Name="AhelpButton" Text="Ahelp" Disabled="True"/>
        <Button Name="FreezeToggleButton" Text="Freeze And Mute" Disabled="True"/>
        <controls:ConfirmButton Name="KickButton" Text="Kick" Disabled="True"/>
        <Button Name="BanButton" Text="Ban" Disabled="True"/>
       </GridContainer>
    </BoxContainer>

</DefaultWindow>
