<DefaultWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    Title="{Loc ban-panel-title}" MinSize="300 300">
    <BoxContainer Orientation="Vertical">
       <Label Name="PlayerName"/>
       <BoxContainer Orientation="Horizontal">
           <Label Name="Whitelisted"/>
           <Button Name="WhitelistToggle" Text="False" Visible="False"></Button>
       </BoxContainer>
       <Label Name="Playtime"/>
       <Label Name="Notes"/>
       <Label Name="Bans"/>
       <Label Name="RoleBans"/>
       <GridContainer Rows="3">
        <Button Name="NotesButton" Text="{Loc player-panel-show-notes}" Disabled="True"/>
        <Button Name="ShowBansButton" Text="{Loc player-panel-show-bans}" Disabled="True"/>
        <Button Name="AhelpButton" Text="{Loc player-panel-help}"/>
        <Button Name="FreezeToggleButton" Text="{Loc player-panel-freeze}" Disabled="True"/>
        <controls:ConfirmButton Name="KickButton" Text="Kick" Disabled="True"/>
        <Button Name="BanButton" Text="{Loc player-panel-ban}" Disabled="True"/>
       </GridContainer>
    </BoxContainer>
</DefaultWindow>
